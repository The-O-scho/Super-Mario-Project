    \end{verbatim}   

    \item \textbf{R code used:}
\begin{verbatim}
library(tidyverse)
library(car)

apft <- read.csv("~/Downloads/APFT.csv")
apft$CS <- as.factor(apft$CS)

model <- lm(height ~ IOCT_Time + APFT_Score + sex + CS, data = apft)
vif(model)
summary(model)
confint(model, level = 0.95)
\end{verbatim}
\end{itemize}

